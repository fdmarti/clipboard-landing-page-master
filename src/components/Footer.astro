---
import SocialMedia from './SocialMedia.astro';
---

<footer>
    <div class='content-footer'>
        <div class='logo'>
            <img src='/images/logo.svg' alt='logo clipboard footer' />
        </div>
        <ul class='external-links'>
            <li><a href='#'>FAQs</a></li>
            <li><a href='#'>Privacy Policy</a></li>
            <li><a href='#'>Install Guide</a></li>

            <li><a href='#'>Contact Us</a></li>
            <li><a href='#'>Press Kit</a></li>
        </ul>
        <SocialMedia />
    </div>
</footer>
<style>
    footer {
        background-color: var(--grayishFooter);
        padding: 20px;
        margin: 0;
    }

    .content-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 0 auto;
        max-width: 1500px;
    }

    .logo img {
        max-width: 70px;
    }

    .external-links {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
    }

    li {
        list-style: none;
    }

    a {
        text-decoration: none;
        color: var(--grayish);
        font-size: 17px;
    }

    @media (max-width: 768px) {
        .content-footer {
            flex-direction: column;
            gap: 1rem;
        }

        .external-links {
            grid-template-columns: 1fr;
        }
    }
</style>
