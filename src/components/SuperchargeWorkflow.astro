---
import TitleTextComponent from './Common/TitleTextComponent.astro';
import Tools from './Common/Tools.astro';
---

<div class='workflow'>
    <TitleTextComponent
        title='Supercharge your workflow'
        text='Weâ€™ve got the tools to boost your productivity.'
    />

    <section class='workflow-tools'>
        <Tools
            title='Create blacklists'
            text='Ensure sensitive information never makes its way to your clipboard by excluding certain sources.'
            urlImage='icon-blacklist.svg'
        />
        <Tools
            title='Plain text snippets'
            text='Remove unwanted formatting from copied text for a consistent look.'
            urlImage='icon-text.svg'
        />
        <Tools
            title='Sneak preview'
            text='Quick preview of all snippets on your Clipboard for easy access.'
            urlImage='icon-preview.svg'
        />
    </section>
</div>
<style>
    .workflow {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 50px;
        text-align: center;
        gap: 5rem;
    }

    .workflow-tools {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 4rem;
    }

    @media (max-width: 768px) {
        .workflow-tools {
            flex-direction: column;
        }
    }
</style>
