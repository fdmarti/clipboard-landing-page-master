---
import TitleTextComponent from './Common/TitleTextComponent.astro';
import ButtonsDownload from './Common/ButtonsDownload.astro';
---

<div class='banner'>
    <section class='logo'>
        <img src='/images/logo.svg' alt='clipboard landing page logo' />
    </section>
    <TitleTextComponent
        title='A history of everything you copy'
        text='Clipboard allows you to track and organize everything you copy. Instantly access your clipboard on all your devices.'
        mainTitle={true}
    />
    <ButtonsDownload />
</div>

<style>
    .banner {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 120px;
        text-align: center;
    }
</style>
