---
const { title, text } = Astro.props;
---

<div class='extra-info'>
    <h4>{title}</h4>
    <p>{text}</p>
</div>
<style>
    .extra-info {
        display: flex;
        flex-direction: column;
        text-align: left;
        max-width: 400px;
    }

    h4 {
        font-size: 26px;
        margin: 0;
        color: var(--grayish);
    }

    p {
        font-size: 18px;
        color: var(--grayishBlue);
        line-height: 30px;
    }

    @media (max-width: 768px) {
        .extra-info {
            text-align: center;
        }
    }
</style>
