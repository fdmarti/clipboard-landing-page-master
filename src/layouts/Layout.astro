---
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/png' href='/images/favicon-32x32.png' />
		<meta name='generator' content={Astro.generator} />
		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			href='https://fonts.googleapis.com/css2?family=Bai+Jamjuree:ital,wght@0,600;1,400&display=swap'
			rel='stylesheet'
		/>
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--strongCyan: hsl(171, 66%, 44%);
		--strongCyanBorder: hsl(171, 44%, 43%);
		--strongCyanHover: hsl(171, 42%, 68%);

		--lightBlue: hsl(233, 100%, 69%);
		--lightBlueBorder: hsl(233, 48%, 56%);
		--lightBlueHover: hsl(233, 36%, 67%);

		--darkGrayishBlue: hsl(171, 66%, 44%);
		--grayishBlue: hsl(201, 11%, 66%);
		--grayishFooter: hsl(203, 15%, 83%);
		--grayish: hsl(200, 7%, 24%);

		--white: #fff;
	}

	* {
		font-family: 'Bai Jamjuree', sans-serif;
	}

	html {
		scroll-behavior: smooth;
	}

	body {
		background: url('/images/bg-header-desktop.png') no-repeat top/100%;
		margin: 0;
		padding: 0;
	}

	img {
		width: 100%;
	}
</style>
